@model Assignment1.Models.Hotel

@{
  ViewData["Title"] = "Delete Hotel";
}

<h1 class="pageTitle">@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this hotel?</h3>
<div>
  <h4>Hotel Details</h4>
  <hr />
  <dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Location)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Location)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.PricePerNight)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.PricePerNight)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Amenities)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Amenities)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ServiceType)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.ServiceType)</dd>
  </dl>

  <form asp-action="DeleteHotelConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.HotelId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ListHotels" class="btn btn-secondary">Cancel</a>
  </form>
</div>
