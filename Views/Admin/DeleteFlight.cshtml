@model Assignment1.Models.Flight

<h1 class="pageTitle">Delete Flight Confirmation</h1>

<h3>Are you sure you want to delete this flight?</h3>
<div>
  <h4>Flight</h4>
  <hr />
  <dl class="row">
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Airline)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Airline)
    </dd>
    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Destination)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Destination)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DepartureAirport)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.DepartureAirport)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ArrivalAirport)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.ArrivalAirport)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DepartureTime)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.DepartureTime)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ArrivalTime)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.ArrivalTime)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Price)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Price)</dd>
  </dl>

  <form asp-action="DeleteFlightConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.FlightId" />
    <button type="submit" class="btn btn-danger">Delete Confirmed</button>
    <a asp-action="ListFlights" class="btn btn-secondary">Cancel</a>
  </form>

</div>
